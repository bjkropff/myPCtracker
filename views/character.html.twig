<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script
      src="http://code.jquery.com/jquery-3.2.1.min.js"
      integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
      crossorigin="anonymous"></script>
    <!-- <script src="../../js/scriptIndex.js"  type="text/javascript"></script> -->
    <link rel="stylesheet" href="../../css/stylesIndex.css" >
    <title>Players</title>
</head>
<body>
  <!-- Begin body; start nav -->
  <div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            <li role="presentation" class="active"><a href="/">Home</a></li>
            <li role="presentation" class="active"><a href="/myteam">My Team</a></li>
            <li role="presentation" class="active"><a href="/add_npcs">Add NPCs</a></li>
            <li role="presentation" class="active"><a href="/enemies">Enemies</a></li>

            <!-- <li role="presentation"><a href="/login">login</a></li> -->

          </ul>
        </nav>
        <h3 class="text-muted">Players Page</h3>
      </div>
      <!-- End nav; start jumbo -->
      <div class="jumbotron">
          <div class="row">
              <div class="col-sm-12 stats">
                <h3>{{ player.getName }}</h3>
                <form action='/myteam' method='post'>
                    <div class="stats">
                        <p>AC: {{ player.getAc }}</p>
                        <p>Hit Points: {{ player.getHp }}</p>
                        <label for='hp'>New HP:</label>
                        <input id='hp' name='hp' type='text' required>
                        <input id="id" name="id" type="hidden" value="{{ player.getId }}">
                        <p>Init: {{ player.getInit }}</p>
                        <label for='summary'>Player summary:</label>
                        <input id='summary' name='summary' type='text' value="{{ player.getSummary }}">
                    </div>
                    <div>
                      <button class="btn btn-success" type='submit'>Edit</button>
                    </div>
                </form>
              </div>
          </div>
      </div>

  </div>
</body>
</html>
